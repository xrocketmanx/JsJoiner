#!/usr/bin/env node

require('./extend');
var argv = require('minimist')(process.argv.slice(2));
var JsFileJoiner = require('./controllers/js-file-joiner');
var config = require('./config');

var userConfig = require('./config-manager')(argv._[0]);
var jsJoiner = new JsFileJoiner(userConfig.js, config.js);

jsJoiner.joinFiles(argv['min']);
if (!argv['watch']) return;

jsJoiner.watch(argv['min']);
